<h1>Posts Lisiting page</h1>

<table>
  <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
  </thead>

<tbody>
     <% @posts.each do|post|%>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>